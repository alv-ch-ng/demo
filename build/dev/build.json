{
    "target": "dev",
    "src": "src",
    "skip": ["cssmin", "processhtml"],
    "tasks": {
        "copy": {
            "dev": {
                "files": [
                    {
                        "expand": true,
                        "cwd": "<%= build.bower %>/bootstrap-select/dist/",
                        "src": "**/*",
                        "dest": "<%= build.src %>/lib"
                    },
                    {
                        "expand": true,
                        "cwd": "<%= build.bower %>/bootstrapaccessibilityplugin/plugins/css/",
                        "src": "**/bootstrap-accessibility.css",
                        "dest": "<%= build.src %>/lib"
                    },
                    {
                        "expand": true,
                        "cwd": "<%= build.bower %>/alv-ch-ng/dist/css",
                        "src": "**/*",
                        "dest": "<%= build.src %>/lib"
                    },
                    {
                        "expand": true,
                        "cwd": "<%= build.bower %>/octicons/octicons/",
                        "src": "**/*",
                        "dest": "<%= build.src %>/lib/octicons"
                    },
                    {
                        "expand": true,
                        "cwd": "<%= build.bower %>/highlightjs/styles/",
                        "src": "**/github.css",
                        "dest": "<%= build.src %>/lib"
                    },
                    {
                        "expand": true,
                        "cwd": "<%= build.bower %>/track.js/",
                        "src": "**/*.js",
                        "dest": "<%= build.src %>/lib"
                    },
                    {
                        "expand": true,
                        "cwd": "build/src",
                        "src": "alv-ch-ng.demo.common.config.js",
                        "dest": "<%= build.src %>/conf"
                    }
                ]
            }
        }
    }
}