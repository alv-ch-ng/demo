{
    "options": {
        "defaultEnvironment": "dev",
        "banner": "/* <%= build.app.name %> - <%= build.app.version %> - <%= grunt.template.today('yyyy-mm - dd') %> - Copyright (c) <%= grunt.template.today('yyyy') %> ICT ALV-CH; */\n",
        "vars": {
        },
        "requires": [
            "grunt-template-jasmine-istanbul",
            "jshint-log-reporter"
        ]
    },
    "tasks": {
        "copy": {
            "bootstrap": {
                "files": [
                    {
                        "expand": true,
                        "cwd": "<%= build.bower %>/bootstrap/dist/fonts",
                        "src": "**/*",
                        "dest": "<%= build.src %>/lib/bootstrap/fonts"
                    },
                    {
                        "expand": true,
                        "cwd": "<%= build.bower %>/bootstrap/dist/template",
                        "src": "**/*",
                        "dest": "<%= build.src %>/template"
                    }
                ]
            },
            "config": {
                "files": [
                    {
                        "expand": true,
                        "cwd": "build/<%= build.target %>/alv-ch-ng.demo.common.constants.js",
                        "src": "application.constants.js",
                        "dest": "<%= build.src %>/conf"
                    }
                ]
            },
            "private": {
                "files": [
                    {
                        "expand": true,
                        "cwd": "private/fonts",
                        "src": "**/*",
                        "dest": "<%= build.src %>/fonts"
                    }
                ]
            }
        },
        "cssmin": {
            "options": {
                "banner": "<%= build.banner %>"
            },
            "alvch": {
                "files": {
                    "<%= build.src %>/css/style.min.css": [
                        "<%= build.bower %>/alv-ch-ng/dist/css/admin-icons.css",
                        "<%= build.bower %>/alv-ch-ng/dist/css/alv-ch-bootstrap.css",
                        "<%= build.bower %>/bootstrapaccessibilityplugin/plugins/css/bootstrap-accessibility.css",
                        "<%= build.bower %>/alv-ch-ng/dist/css/frutiger.css",
                        "<%= build.src %>/css/alv-ch-ng.demo.css",
                        "<%= build.bower  %>/highlightjs/styles/github.css"
                    ]
                }
            }
        },
        "uglify": {
            "options": {
                "banner": "<%= build.banner %>"
            },
            "common": {
                "options": {
                    "mangle": false
                },
                "files": {
                    "<%= build.src %>/lib/lib.min.js": [
                        "<%= build.bower %>/jquery/dist/jquery.js",
                        "<%= build.bower %>/jquery-i18n-property/jquery.i18n.properties.js",
                        "<%= build.bower %>/bootstrap/dist/js/bootstrap.js",
                        "<%= build.bower %>/bootstrap-select/dist/js/bootstrap-select.js",
                        "<%= build.bower %>/bootstrapaccessibilityplugin/plugins/js/bootstrap-accessibility.js",
                        "<%= build.bower %>/angular/angular.js",
                        "<%= build.bower %>/autofill-event/src/autofill-event.js",
                        "<%= build.bower %>/angular-cookies/angular-cookies.js",
                        "<%= build.bower %>/angular-route/angular-route.js",
                        "<%= build.bower %>/angular-sanitize/angular-sanitize.js",
                        "<%= build.bower %>/angular-scroll/angular-scroll.js",
                        "<%= build.bower %>/angular-ui-bootstrap/src/bindHtml/bindHtml.js",
                        "<%= build.bower %>/angular-ui-bootstrap/src/position/position.js",
                        "<%= build.bower %>/angular-ui-bootstrap/src/tabs/tabs.js",
                        "<%= build.bower %>/angular-ui-bootstrap/src/tooltip/tooltip.js",
                        "<%= build.bower %>/angular-ui-bootstrap/src/typeahead/typeahead.js",
                        "<%= build.bower %>/ng-dev/dist/ng-dev.js",
                        "<%= build.bower %>/highlightjs/highlight.pack.js",
                        "<%= build.bower %>/alv-ch-ng/dist/alv-ch-ng.security.js",
                        "<%= build.bower %>/alv-ch-ng/dist/alv-ch-ng.i18n.js",
                        "<%= build.bower %>/alv-ch-ng/dist/alv-ch-ng.ui-core.js",
                        "<%= build.bower %>/alv-ch-ng/dist/alv-ch-ng.ui-forms.js",
                        "<%= build.bower %>/alv-ch-ng/dist/alv-ch-ng.ui-scroll.js",
                        "<%= build.bower %>/components-webfontloader/webfont.js",
                        "<%= build.bower %>/track.js/tracker.js"
                    ]
                }
            }
        }
    }
}








