{
    "target": "src",
    "src": "dev",
    "execute": [
        "jshint",
        "jasmine",
        "clean:srcFromDev",
        "copy:srcFromDev"
    ],
    "tasks": {
        "clean": {
            "srcFromDev": [
                "<%= build.target %>/**/*"
            ]
        },
        "copy": {
            "srcFromDev": {
                "files": [
                    {
                        "expand": true,
                        "cwd": "<%= build.src %>",
                        "src": "index.html",
                        "dest": "<%= build.target %>"
                    },
                    {
                        "expand": true,
                        "cwd": "<%= build.src %>/admin",
                        "src": "**/*",
                        "dest": "<%= build.target %>/admin"
                    },
                    {
                        "expand": true,
                        "cwd": "<%= build.src %>/css",
                        "src": "**/*",
                        "dest": "<%= build.target %>/css"
                    },
                    {
                        "expand": true,
                        "cwd": "<%= build.src %>/i18n",
                        "src": "**/*",
                        "dest": "<%= build.target %>/i18n"
                    },
                    {
                        "expand": true,
                        "cwd": "<%= build.src %>/images",
                        "src": "**/*",
                        "dest": "<%= build.target %>/images"
                    },
                    {
                        "expand": true,
                        "cwd": "<%= build.src %>/js",
                        "src": "**/*",
                        "dest": "<%= build.target %>/js"
                    },
                    {
                        "expand": true,
                        "cwd": "<%= build.src %>/pages",
                        "src": "**/*",
                        "dest": "<%= build.target %>/pages"
                    }
                ]
            }
        },
        "uglify": {
            "dist": {
                "options": {
                    "mangle": false
                },
                "files": {
                    "<%= build.target %>/js/application.min.js": [
                        "<%= build.target %>/lib/lib.min.js",
                        "config/<%= build.target %>/alv-ch-reperire.common.constants.js",
                        "<%= build.src %>/js/modules/alv-ch-tech.models.js",
                        "<%= build.src %>/js/modules/alv-ch-tech.swagger-doc.js",
                        "<%= build.src %>/js/modules/alv-ch-tech.ui.js",
                        "<%= build.src %>/js/application.js"
                    ]
                }
            }
        }
    }
}